<Window x:Class="AuditLogsUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Audit Logs Extractor" Height="500" Width="700">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Botones -->
            <RowDefinition Height="Auto"/>
            <!-- Progreso -->
            <RowDefinition Height="*"/>
            <!-- Consola/log -->
        </Grid.RowDefinitions>

        <!-- Botones -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10">
            <Button x:Name="btnIniciar" Content="Iniciar" Margin="0,0,10,0" Click="btnIniciar_Click"/>
            <Button x:Name="btnPausar" Content="Pausar" Click="btnPausar_Click" IsEnabled="False"/>
        </StackPanel>

        <!-- Progreso -->
        <TextBlock x:Name="txtProgreso"
           Grid.Row="1"
           Margin="0,0,0,10"
           FontFamily="Consolas"
           FontSize="14"
           FontWeight="Bold"
           Foreground="DarkBlue"
           Background="#FFEFEF"
           Padding="4"
           TextWrapping="NoWrap"/>

        <!-- Consola / Log -->
        <RichTextBox x:Name="txtConsola"
                     Grid.Row="2"
                     IsReadOnly="True"
                     VerticalScrollBarVisibility="Auto"
                     FontFamily="Consolas"
                     FontSize="12"
                     Background="Black"
                     BorderBrush="Gray"
                     BorderThickness="1"
                     Padding="4" />
    </Grid>
</Window>