<Window x:Class="AuditLogsUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Audit Logs Extractor" Height="500" Width="700">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <Button x:Name="btnIniciar" Content="Iniciar" Width="100" Margin="0,0,10,0" Click="btnIniciar_Click"/>
            <Button x:Name="btnPausar" Content="Pausar" Width="100" Click="btnPausar_Click"/>
        </StackPanel>

        <TextBox x:Name="txtConsola" Grid.Row="1" 
                 VerticalScrollBarVisibility="Auto" 
                 HorizontalScrollBarVisibility="Auto"
                 FontFamily="Consolas" FontSize="12"
                 IsReadOnly="True" 
                 TextWrapping="Wrap"
                 AcceptsReturn="True"
                 Background="Black" Foreground="White"/>
    </Grid>
</Window>
